<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 form">
      <h2 class="h2">Submit an app</h2>

      <%= simple_form_for(@app) do |f| %>

        <% if @app.errors.any? %>
          <div class="errors-container">
            <ul>
              <% @app.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-inputs">
          <%= f.input :name,
                      required: true,
                      placeholder: "Add the name",
                      label: false %>

          <%= f.input :webpage_url,
                      required: true,
                      placeholder: "Add the url",
                      label: false %>

          <%= f.input :description,
                      required: false,
                      placeholder: "Add a description",
                      label: false %>

          <%= f.input :category_id,
                      required: true,
                      prompt: "Select a category",
                      label: false,
                      collection: @categories %>

          <%= f.input :logo,
                      label: false %>

          <%= f.input :logo_cache, as: :hidden %>

<!--           <label for="file-upload" class="custom-file-upload">
            <i class="fa fa-cloud-upload"></i> upload the logo
          </label>
          <input id="file-upload" type="file"/> -->

        </div>

        <div class="form-actions">
          <%= f.button :submit, "Submit", class: "form-button button"%>
        </div>
      <% end %>
      <br />
      <p style="font-size: 14px;"> We will get back to you and upload the subimitted app after review. Thank you for your contribution!
      <hr>
        <%= link_to apps_path do %>
          <i class="fa fa-history"></i> Back to Homepage
        <% end %>
    </div>
  </div>
</div>
